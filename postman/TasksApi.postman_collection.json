{
  "info": {
    "name": "Tasks API",
    "description": "CRUD API for managing tasks with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"accessToken\", jsonData.token);",
                  "    console.log(\"Token saved:\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/Auth/token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Auth", "token"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks"]
            }
          },
          "response": []
        },
        {
          "name": "Get Task By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks", "{{taskId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get Tasks By Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks/status/0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks", "status", "0"]
            },
            "description": "Status: 0=Todo, 1=InProgress, 2=Done"
          },
          "response": []
        },
        {
          "name": "Create Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"taskId\", jsonData.id);",
                  "    console.log(\"Task ID saved:\", jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Implement authentication\",\n  \"description\": \"Add OAuth 2.0 JWT authentication to the API\",\n  \"status\": 0,\n  \"priority\": 2,\n  \"dueDate\": \"2026-02-01T00:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks"]
            }
          },
          "response": []
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Implement authentication - UPDATED\",\n  \"description\": \"Add OAuth 2.0 JWT authentication with refresh tokens\",\n  \"status\": 1,\n  \"priority\": 2,\n  \"dueDate\": \"2026-02-15T00:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks", "{{taskId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks", "{{taskId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Test Rate Limiting",
      "item": [
        {
          "name": "Rapid Requests (Trigger Rate Limit)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/Tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "Tasks"]
            },
            "description": "Run this request 60+ times quickly to trigger 429 Rate Limit"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5178",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "taskId",
      "value": "",
      "type": "string"
    }
  ]
}